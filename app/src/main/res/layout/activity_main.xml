                android:id="@+id/button15"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="data"
                android:src="@drawable/codeio"/>
            <ImageButton
                android:id="@+id/button16"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="data"
                android:src="@drawable/codeio"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>